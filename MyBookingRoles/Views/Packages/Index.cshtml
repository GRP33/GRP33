@model IEnumerable<MyBookingRoles.Models.Booking.Package>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PackageType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PackagePrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PackageType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PackagePrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PackageId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PackageId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PackageId })
        </td>
    </tr>
}

</table>
