</head>
<body class=" cyan-skin fix-sidebar card-no-border fix-header">
    <nav class="navbar-inverse">
        <div class="navbar navbar-inverse navbar-fixed-top navbar-dark danger-color">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand " href="@Url.Action("Index","Home")" style="color:cyan">

                        <p id="icon" style="text-shadow: rgb(9, 27, 25) 0px 0px 0px, rgb(9, 28, 26) 1px 1px 0px, rgb(10, 29, 27) 2px 2px 0px, rgb(10, 30, 28) 3px 3px 0px,
                       rgb(11, 31, 29) 4px 4px 0px, rgb(11, 32, 30) 5px 5px 0px, rgb(11, 33, 31) 6px 6px 0px, rgb(12, 35, 32) 7px 7px 0px,
                       rgb(12, 36, 33) 8px 8px 0px, rgb(13, 37, 34) 9px 9px 0px;
                       font-size: 25px; color: rgb(38, 255, 111); height: 35px; width: 100px; line-height: 25px; border-radius: 17%;
                       text-align: center; background-color: rgb(13, 38, 35);">
                            <b>Photo45</b>
                        </p>
                    </a>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <style>
                        .dropbtn {
                            background-color: #4CAF50;
                            color: white;
                            padding: 16px;
                            font-size: 16px;
                            border: none;
                            cursor: pointer;
                        }

                        .dropdown {
                            position: relative;
                            display: inline-block;
                        }

                        .dropdown-content {
                            display: none;
                            position: absolute;
                            background-color: #f9f9f9;
                            min-width: 160px;
                            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
                            padding: 12px 16px;
                            z-index: 1;
                        }

                        .dropdown:hover .dropdown-content {
                            display: block;
                        }

                        .dropdown:hover .dropbtn {
                            background-color: #3e8e41;
                        }

                        .footer {
                            position: fixed;
                            left: 0;
                            bottom: 0;
                            width: 100%;
                            text-align: center;
                        }

                        /*  .sidenav {
                            width: 110px;
                            height: auto;
                            position: fixed;
                            z-index: 1;
                            left: 10px;
                            overflow-x: hidden;
                            padding: 8px 0;
                        }

                            .sidenav a {
                                padding: 6px 8px 6px 16px;
                                text-decoration: none;
                                display: block;
                            }

                        .main {
                            margin-left: 140px;
                            padding: 0px 10px;
                        }*/
                    </style>
                    <ul class="nav navbar-nav ">

                        <li> <button class="dropbtn" style="color:white">@Html.ActionLink("ABOUT", "About", "Home") </button></li>
                        <li><button class="dropbtn" style="color:white">@Html.ActionLink("CONTACT", "Contact", "Home")</button></li>
                        <li class="dropdown">
                            <button class="dropbtn ">Bookings</button>

                            <ul class="dropdown-content">
                                <li> <a href="@Url.Action("Create","Bookings")"> Book an Artist  </a></li>

                                <li> <a href="@Url.Action("ArtistList","Artists")"> View  Artist </a></li>
                                <li> <a href="@Url.Action( "Create", "Feedbacks")"> Evaluate service </a></li>
                                <li> <a href="@Url.Action("getBookings", "MyUser")"> My Bookings </a></li>
                            </ul>
                        </li>

                        <li class=" dropdown">
                            <button class="dropbtn ">Online Store </button>
                            <ul class=" dropdown-content">
                                <li> <a href="@Url.Action("ProdCatalogue","Store")"> Specials </a></li>

                                <li><a href="@Url.Action("Cart","ShoppingCart")"> My Cart </a></li>
                                <li><a href="@Url.Action("customerOrders","MyUser")">  My Orders  </a></li>
                            </ul>
                        </li>
                        <li><button class="dropbtn">@Html.ActionLink("REQUEST PRINTING", "Create", "RequestPrintings")</button></li>

                        <li><button class="dropbtn"> @Html.ActionLink("Evaluate Service", "Create", "Feedbacks")</button></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="active " style="">
                            <a href="@Url.Action("Myorder","AddToCart")">
                                <span class="glyphicon glyphicon-shopping-cart" style="width: 20px; height: 20px; background: #000000; margin: auto; -moz-border-radius: 20px; border-radius: 20px; padding: 6px; "></span>
                                Cart
                                <span class="badge">@Session["count"]</span>
                            </a>
                        </li>
                        <li class="active " style="height:20px">
                            <a href="@Url.Action("Index","Wishlist")">
                                <span class="fa fa-heart fa-2x" style="width:20px;  color:red; background:#000000;  margin: auto; -moz-border-radius: 20px; border-radius: 20px; padding: 6px; "></span>
                                WishList
                                <span class="badge">@Session["add"]</span>
                            </a>

                        </li>
                    </ul>
                    <ul class=" nav navbar-nav navbar-right">

                        <li> @Html.Partial("_LoginPartial")</li>
                        @*<img src="@Url.Action("UserPhoto","Home")" style="width:48px;height:48px; background:#000000;margin:auto;-moz-border-radius:20px; border-radius:20px; padding:6px; box-shadow:0px 0px 20px #ffffff" />*@

                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <div id="main-wrapper">
        <aside class="left-sidebar">
            <div class="scroll-sidebar">
                <nav class="sidebar-nav">
                    <ul id="sidebarnav">
                        <li><h1></h1></li>
                        <li style="color:dodgerblue"><a class=" waves-effect" style="color:dodgerblue"><i class="fa fa-dashboard"></i> </a>Welcome @User.Identity.Name, what would you like to do today?</li>
                        @*<li><a class="glyphicon glyphicon-dashboard waves-effect" style="color:dodgerblue"></a>@User.Identity.Name , what would you like to do today?</li>*@
                        <li><a href="@Url.Action("customerProfile","MyUser")" class="waves-effect"><i class="glyphicon glyphicon-user m-r-10" aria-hidden="true"></i> User Profile</a></li>
                        <li><a href="@Url.Action("getBookings","MyUser")" class="waves-effect"><i class="fa fa-user-secret m-r-10" aria-hidden="true"></i>  User Bookings</a></li>
                        <li><a href="@Url.Action("Index","Manage")" class="waves-effect"><i class="glyphicon glyphicon-book m-r-10" aria-hidden="true"></i> Manage Account</a></li>
                        <li><a href="@Url.Action("customerOrders","MyUser")" class="waves-effect"><i class="glyphicon glyphicon-bell m-r-10" aria-hidden="true"></i> User Orders</a></li>
                        <li><a href="@Url.Action("Create","Bookings")" class="waves-effect"><i class="glyphicon glyphicon-camera m-r-10" aria-hidden="true"></i> Book an Artist</a></li>
                        <li><a href="@Url.Action("Create","Feedbacks")" class="waves-effect"><i class="glyphicon glyphicon-comment m-r-10" aria-hidden="true"></i> Submit a Review</a></li>
                        <li><a href="@Url.Action("ProdCatalogue","Store")" class="waves-effect"><i class="glyphicon glyphicon-shopping-cart m-r-10" aria-hidden="true"></i> Purchase Items</a></li>
                        
                        <li class="active " style="">
                            <a href="@Url.Action("Myorder","AddToCart")">
                                <span class="fa fa-shopping-cart fa-2x" style="color:forestgreen; background:#c3baba;  margin: auto; -moz-border-radius: 20px; border-radius: 20px; padding: 6px; "></span>
                                Cart
                                <span class="badge">@Session["count"]</span>
                            </a>

                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <div class="page-wrapper">
            <div class="container-fluid">
                <!--bread crumbs-->
                <div class="row page-titles">
                    <div class="col-md-6 col-8 align-self-center">
                        <h3 class="text-themecolor m-b-0 m-t-0">@ViewBag.Title</h3>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0)">@ViewBag.Title</a></li>
                            <li class="breadcrumb-item active">@ViewBag.Title</li>
                        </ol>
                    </div>

                </div>
                <!--end br c-->
                <div class="row">
                    <div class="col-12 ">
                        <div class="card">
                            <div class="card-block">
                                @RenderBody()


                                <hr />
                                <div class="footer">
                                    <footer>
                                        <p>&copy; @DateTime.Now.Year - SUPER STRIKERS GRP33 for STUDIO45 @Html.ActionLink("Terms & Conditions", "Terms", "ShoppingCart")</p>

                                    </footer>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--ALL JQUERY-->
    <script src="~/assets/plugins/bootstrap/js/tether.min.js"></script>
    <script src="~/assets/plugins/jquery/jquery.min.js"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <!--scroll-->
    <script src="~/Scripts/js/jquery.slimscroll.js"></script>
    <!--wave effect-->
    <script src="~/Scripts/js/waves.js"></script>
    <!--side bar-->
    <script src="~/Scripts/js/sidebarmenu.js"></script>
    <script src="~/assets/plugins/sticky-kit-master/dist/sticky-kit.min.js"></script>
    <script src="~/Scripts/js/custom.min.js"></script>
    <script src="~/assets/plugins/styleswitcher/jQuery.style.switcher.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~bundles/fullcalendarjs")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>



