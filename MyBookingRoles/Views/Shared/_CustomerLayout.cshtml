<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - STUDIO45</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fullcalendarcss")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/jquery-ui.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fullcalendar.css" rel="stylesheet" type="text/css" />
    <link href="~/MDB-Free_4.19.1/css/addons/rating.min.css" rel="stylesheet" />
    <!--custom css-->
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <!--colors-->
    <link href="~/Content/css/colors/green-dark.css" id="theme" rel="stylesheet" />
    <!--icons-->
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/images/favicon.png" />
    <script src="~/MDB-Free_4.19.1/js/addons/rating.min.js" type="text/javascript"></script>

    <script src="~/Scripts/jquery-ui.js" type="text/javascript"></script>
